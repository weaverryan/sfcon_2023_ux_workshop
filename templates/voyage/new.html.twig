{% extends 'modalBase.html.twig' %}

{% block title %}New Voyage{% endblock %}

{% block body %}
    <div class="m-4 p-4 bg-gray-800 rounded-lg">
        <div class="flex justify-between">
            <h1 class="text-xl font-semibold text-white mb-4">Create New Voyage</h1>

            <div class="mr-4">
                <a href="{{ path('app_voyage_index') }}" class="text-sm font-medium text-white">
                    Back to list
                </a>
                <div class="inline-block">
                    {% if form.vars.data.id|default %}
                        {{ include('voyage/_delete_form.html.twig') }}
                    {% endif %}
                </div>
            </div>
        </div>
        {{ include('voyage/_form.html.twig') }}
    </div>
{% endblock %}

{% block success_stream %}
    <turbo-stream action="update" target="modal">
        <template></template>
    </turbo-stream>

    <turbo-stream action="append" target="flash-container">
        <template>{{ include('_flashes.html.twig') }}</template>
    </turbo-stream>

    <turbo-stream action="prepend" targets="#voyage-crud-table tbody">
        <template>{{ include('voyage/_row.html.twig') }}</template>
    </turbo-stream>
{% endblock %}
